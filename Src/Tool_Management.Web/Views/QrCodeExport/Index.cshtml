                  Value = "刀具"
              },
                                  new SelectListItem() {
                  Text = "刀把",
                  Value = "刀把"
              },
                                                   new SelectListItem() {
                  Text = "拉丁",
                  Value = "拉丁"
              },
                                                                    new SelectListItem() {
                  Text = "機上量測",
                  Value = "機上量測"
              },
                 new SelectListItem() {
                  Text = "延長桿",
                  Value = "延長桿"
              },
                 new SelectListItem() {
