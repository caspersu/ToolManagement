<script type="text/javascript">
    function error_handler(e) {

        if (e.errors) {
            var message = "";
            $.each(e.errors, function (key, value) {
                if ('errors' in value) {
                    $.each(value.errors, function () {
                        message += this + "\n";
                    });
                }
            });

            location.reload();
            alert(message);
        }
        return;
    }
</script>
