
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="row">
        @Html.Label("input", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.TextBox("id")
            <div class="tip_box" id="qrcode">
            </div>
        </div>
    </div>
<select>
    <option value="P100">P100</option>
    <option value="P800">P800</option>
    <option value="opel">Opel</option>
    <option value="audi">Audi</option>
</select>
<div id="example">
    <div class="demo-section k-content">
        <h4>QR code</h4>
        <span data-role="qrcode"
              data-error-correction="M"
              data-bind="value: qrcode"
              style="height: 250px;"></span>
    </div>

    <div class="box wide">
        <div class="box-col">
            <h4>Value</h4>
            <input data-bind="value: qrcode" data-value-update="keyup">
        </div>
        <div class="box-col">
            <h4>Information</h4>
            Kendo UI QR code supports the
            <a href="http://docs.telerik.com/kendo-ui/getting-started/framework/mvvm/bindings/value">value</a> binding.
        </div>
    </div>
    <script>
    function createQrCode() {
        var viewModel = kendo.observable({
            qrcode: ""
        });
        kendo.bind($("#example"), viewModel);
    }
    $(document).ready(createQrCode).bind("kendo:skinChange", createQrCode);
    </script>
</div>

