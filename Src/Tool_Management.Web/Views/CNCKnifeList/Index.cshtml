                            pageable => pageable.Refresh(true)
                            .PageSizes(new[] { 10 })
                            .Messages(m =>
                            {
                                m.Empty("查無資料");
                                m.ItemsPerPage("每頁筆數");
                                m.Display("{0} - {1} 共 {2} 筆");
                            })
                        )
                        .DataSource(dataSource => dataSource
                            .Ajax()
                            .Sort(s => { s.Add(o => o.CNC_ID).Descending(); })
                            .Events(events => events.Error("error_handler"))
                            .Model(model => { model.Id(p => p.CNCKnifeList_ID); })
                            .Read(read => read.Action("GridSearch", "CNCKnifeList"))
                            .Create(update => update.Action("EditingPopup_Create", "CNCKnifeList"))
                            .Update(update => update.Action("EditingPopup_Update", "CNCKnifeList"))
                            //.Destroy(update => update.Action("EditingPopup_Delete", "KnifeList"))
                        .PageSize(10)
                        )
